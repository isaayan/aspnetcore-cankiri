@model IEnumerable<SliderImage>

    <h1>Slider Yönetimi</h1>
    
    <form asp-action="Add" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label for="imageFile">Resim Yükle</label>
            <input type="file" name="imageFile" class="form-control" required>
        </div>
        <div class="form-group mb-3">
            <label for="caption">Başlık</label>
            <input type="text" name="caption" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
    
    <h2>Mevcut Resimler</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Resim</th>
                <th>Başlık</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var image in Model)
            {
                <tr>
                    <td><img src="@image.ImagePath" alt="Slider Image" width="100"></td>
                    <td>@image.Caption</td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@image.Id" />
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    