@model LoginViewModel

<div class="container vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100 shadow-lg rounded overflow-hidden" style="max-width: 900px;">
        <!-- Left Side (Logo and Banner) -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center gradient-bg text-white">
            <div class="text-center p-4">
                <img src="/images/logo1.png" alt="Çankırı Belediyesi" class="img-fluid mb-4">
                <h2 class="fw-bold">Çankırı Belediyesi'ne Hoş Geldiniz</h2>
                <p class="mt-3">Daha iyi bir gelecek için birlikte çalışıyoruz.</p>
            </div>
        </div>

        <!-- Right Side (Login Form) -->
        <div class="col-lg-6 col-md-12 bg-white p-5">
            <div class="form-wrapper">
                <h2 class="text-center mb-4 fw-bold text-primary" style="color: #2c3e50;">Hesabınıza Giriş Yapın</h2>
                <form action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-4">
                        <label for="email" class="form-label text-muted">Email adres</label>
                        <input asp-for="Email" type="email" id="email" class="form-control form-control-lg" placeholder="Email adresinizi giriniz" required>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label text-muted">Şifre</label>
                        <input asp-for="Password" type="password" id="password" class="form-control form-control-lg" placeholder="Şifrenizi giriniz" required>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <button type="submit" class="btn w-100 py-2 mb-3 text-white" style="background: #3498db; border: none;">Giriş Yap</button>
                </form>
                <div class="text-center mt-3">
                    <p class="text-muted">Hesabınız yok mu?
                        <a href="/users/register" class="text-decoration-none fw-bold" style="color: #3498db;">Buradan kaydolun</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #f4f4f4;
        font-family: 'Arial', sans-serif;
    }

    .gradient-bg {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }

    .form-control {
        border: 1px solid #ddd;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 8px rgba(52, 152, 219, 0.5);
    }

    .btn {
        background: #3498db;
        border: none;
    }

    .btn:hover {
        background: #1f78d1;
    }

    .shadow-lg {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .rounded {
        border-radius: 12px;
    }
</style>
