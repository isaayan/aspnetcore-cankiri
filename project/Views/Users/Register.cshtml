@model RegisterViewModel

<div class="container d-flex align-items-center justify-content-center">
    <div class="row w-100 shadow-lg rounded overflow-hidden" style="max-width: 1200px;">
        <!-- Left Side (Logo and Banner) -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center gradient-bg text-white">
            <div class="text-center p-4">
                <img src="/images/logo1.png" style="height: 450px;" alt="Çankırı Belediyesi" class="img-fluid mb-4">
                <h2 class="fw-bold">Çankırı Belediyesi'ne Hoş Geldiniz</h2>
                <p class="mt-3">Daha iyi bir geleceği birlikte inşa etmek için bize katılın.</p>
            </div>
        </div>

        <!-- Right Side (Registration Form) -->
        <div class="col-lg-6 col-md-12 bg-white p-5">
            <h2 class="text-center mb-4 fw-bold text-primary">Hesabınızı Oluşturun</h2>
            <form action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-4">
                    <label for="UserName" class="form-label text-muted">Kullanıcı adı</label>
                    <input asp-for="UserName" type="text" id="UserName" class="form-control form-control-lg" placeholder="Kullanıcı adınızı giriniz" required>
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label for="Name" class="form-label text-muted">Adınız soyadınız</label>
                    <input asp-for="Name" type="text" id="Name" class="form-control form-control-lg" placeholder="Adınızı soyadınızı giriniz" required>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label for="Email" class="form-label text-muted">Email adres</label>
                    <input asp-for="Email" type="email" id="Email" class="form-control form-control-lg" placeholder="Email adresinizi giriniz" required>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label for="Password" class="form-label text-muted">Şifre</label>
                    <input asp-for="Password" type="password" id="Password" class="form-control form-control-lg" placeholder="Şifrenizi giriniz" required>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label for="ConfirmPassword" class="form-label text-muted">Şifre Tekrar</label>
                    <input asp-for="ConfirmPassword" type="password" id="ConfirmPassword" class="form-control form-control-lg" placeholder="şifrenizi tekrar giriniz" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">Kayıt Ol</button>
            </form>

            <div class="text-center mt-3">
                <p class="text-muted">Zaten bir hesabınız var mı?
                    <a href="/users/login" class="text-decoration-none fw-bold text-primary">Buradan giriş yapın</a>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control {
        border: 1px solid #ddd;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 8px rgba(52, 152, 219, 0.5);
    }

    .btn {
        background: #3498db;
        border: none;
    }

    .btn:hover {
        background: #1f78d1;
    }

    .bg-white {
        background-color: #ffffff;
    }

    .gradient-bg {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }
</style>
